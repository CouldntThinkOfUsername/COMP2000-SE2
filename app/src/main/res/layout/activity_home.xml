<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:padding="15dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:src="@drawable/baseline_edit_location_alt_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currently viewing: Location"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not here? Click here to change location."
            android:textColor="@color/white"
            android:textSize="6dp"
            android:textStyle="italic"

            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/guest_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Hello Guest!"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/off_white"
        android:backgroundTint="@null"
        android:orientation="vertical">

        <Button
            app:backgroundTint="@null"
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:background="@color/colorPrimary"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Menu"
            android:textSize="16sp" />

        <Button
            app:backgroundTint="@null"
            android:id="@+id/reservations"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:background="@color/colorPrimary"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Reservations"
            android:textSize="16sp"

            />

        <Button
            app:backgroundTint="@null"
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_margin="30dp"
            android:background="@color/colorAccent"
            android:elevation="2dp"
            android:text="Log out"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>



